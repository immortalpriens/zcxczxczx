<Window x:Class="test1.osnovaForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test1"
        mc:Ignorable="d"
        Title="osnovaForm" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgTest" HorizontalAlignment="Left" Height="281" Margin="10,129,-0.4,0" VerticalAlignment="Top" Width="784" AutoGenerateColumns="False">
            <DataGrid.Columns>
            <DataGridTextColumn Header="ID" Binding="{Binding ID_Cinema}" Visibility="Hidden"></DataGridTextColumn>
            <DataGridTextColumn Header="Адрес кинотеатра" Binding="{Binding Address}" Visibility="Visible"></DataGridTextColumn>
            <DataGridTextColumn Header="Количество залов" Binding="{Binding HallsCount}" Visibility="Visible"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
